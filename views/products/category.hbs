                    <div class="banner"><a href="#"><img src="/images/banner.jpg" alt="sales 2014"
                                class="img-fluid"></a>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="box">
                        <h1>Ladies</h1>
                        <p>In our Ladies department we offer wide selection of the best products we have found and
                            carefully selected worldwide.</p>
                    </div>
                    <div class="box info-bar">
                        <div class="row">
                            <div class="col-md-12 col-lg-4 products-showing">Đang hiển thị <strong>{{limit}}</strong>
                                trên
                                <strong>{{totalProductsPerType}}</strong> sản phẩm
                            </div>
                            <div class="col-md-12 col-lg-8 products-number-sort">
                                <form
                                    class="form-inline d-block d-lg-flex justify-content-between flex-column flex-md-row">
                                    <div class="products-number"><strong>Hiển thị</strong><a href="#"
                                            class="btn btn-sm btn-primary">12</a><a href="#"
                                            class="btn btn-outline-secondary btn-sm">24</a><a href="#"
                                            class="btn btn-outline-secondary btn-sm">All</a><span>sản phẩm</span></div>
                                    <div class="products-sort-by mt-2 mt-lg-0"><strong>Sắp xếp theo</strong>
                                        <select name="sort-by" class="form-control">
                                            <option>Giá</option>
                                            <option>Tên</option>
                                            <option>Sales first</option>
                                        </select>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="row products">
                        {{#each listProducts}}
                        <div class="col-lg-4 col-md-6">
                            <div class="product">
                                <div class="flip-container">
                                   
                                    <div class="flipper">
                                        <div class="container row">
                                            <div class="col-auto bg-white" style="z-index: 999; position:absolute;"><i class="fa fa-eye" aria-hidden="true"></i> {{view}}</div>  
                                        </div>
                                        <div class="front"><a href="/products/detail/{{_id}}"><img src="{{image}}"
                                                    alt="" class="img-fluid"></a></div>
                                        <div class="back"><a href="/products/detail/{{_id}}"><img src="{{image}}" alt=""
                                                    class="img-fluid"></a></div>
                                                   
                                    </div>
                                </div><a href="/products/detail/{{_id}}" class="invisible"><img src="{{image}}" alt=""
                                        class="img-fluid"></a>
                                <div class="text">
                                    <h3><a href="/products/detail/{{_id}}">{{productName}}</a></h3>
                                    <p class="price">
                                        <del></del>{{defaultPrice}}₫
                                    </p>
                                   
                                    <p class="buttons"><a href="/products/detail/{{_id}}?childCatID={{childProductTypeID._id}}"
                                            class="btn btn-outline-secondary">Chi tiết
                                        </a><a href="basket.html" class="btn btn-primary"><i
                                                class="fa fa-shopping-cart"></i>Thêm vào giỏ</a></p>
                                </div>
                                <!-- /.text-->

                                {{#if condition}}
                                <div class="ribbon sale">
                                    <div class="theribbon">SALE</div>
                                    <div class="ribbon-background"></div>
                                </div>
                                <!-- /.ribbon-->
                                {{/if}}
                                {{#if condition}}
                                <div class="ribbon new">
                                    <div class="theribbon">NEW</div>
                                    <div class="ribbon-background"></div>
                                </div>
                                <!-- /.ribbon-->
                                {{/if}}
                                {{#if condition}}
                                <div class="ribbon gift">
                                    <div class="theribbon">GIFT</div>
                                    <div class="ribbon-background"></div>
                                </div>
                                <!-- /.ribbon-->
                                {{/if}}

                            </div>
                            <!-- /.product            -->
                        </div>
                        {{/each}}
                    </div>

                    {{#if totalProductsPerType}}
                       <h5 class="pages">
                        {{!-- <p class="loadMore"><a href="#" class="btn btn-primary btn-lg"><i
                                    class="fa fa-chevron-down"></i> Load more</a></p> --}}

                        <nav aria-label="Page navigation example" class="d-flex justify-content-center">
                            <ul class="pagination">
                                {{#if hasPrevPage}}
                                <li class="page-item"><a href="/products/category?page={{prevPage}}&catID={{catID}}&childCatID={{childCatID}}"
                                        aria-label="Previous" class="page-link"><span aria-hidden="true">«</span><span
                                            class="sr-only">Previous</span></a></li>
                                {{/if}}

                                {{#each pagination}}
                                <li {{#if isActived}} class="page-item active" {{else}} class="page-item" {{/if}}><a
                                        href="/products/category?page={{pageNumber}}&catID={{catID}}&childCatID={{childCatID}}"
                                        class="page-link">{{pageNumber}}</a></li>
                                {{/each}}

                                {{#if hasNextPage}}
                                <li class="page-item"><a href="/products/category?page={{nextPage}}&catID={{catID}}&childCatID={{childCatID}}" aria-label="Next"
                                        class="page-link"><span aria-hidden="true">»</span><span
                                            class="sr-only">Next</span></a></li>
                                {{/if}}

                            </ul>
                        </nav>
                    </h5>
                    {{else}}
                        <h1 class="text-center">Không có sản phẩm!</h1>
                    {{/if}}
