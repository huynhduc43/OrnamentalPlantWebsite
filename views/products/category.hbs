                            <h3 class="h4 card-title">Danh mục</h3>
                        </div>
                        <div class="card-body">
                            <ul class="nav nav-pills flex-column category-menu">
                                <li><a href="/products/category?page={{currentPage}}" 
                                {{#if isActivedForCatAll}}
                                    class="nav-link active"
                                {{else}}
                                    class="nav-link"
                                {{/if}}>Tất cả 
                                <span {{#if isActivedForCatAll}}
                                    class="badge badge-light"
                                {{else}}
                                    class="badge badge-secondary"
                                {{/if}}>{{totalDocs}}</span></a>
                                </li>
                                
                                {{#each category}}
                                    <li><a href="/products/category?page=1&catID={{_id}}"
                                            {{#if catIDIsActived}}
                                                class="nav-link active"
                                            {{else}}
                                                class="nav-link"
                                            {{/if}}>{{productTypeName}}
                                            <span {{#if catIDIsActived}}
                                                class="badge badge-light"
                                            {{else}}
                                                class="badge badge-secondary"
                                            {{/if}}>{{totalProducts}}</span></a>
                                        <ul class="list-unstyled">
                                            {{#each childProductTypeID}}
                                                <li><a href="/products/category?page=1&catID={{../_id}}&childCatID={{_id}}" 
                                                {{#if childCatIDIsActived}}
                                                    class="nav-link active"
                                                {{else}}   
                                                    class="nav-link"
                                                {{/if}}>{{childProductTypeName}}</a></li>
                                            {{/each}}
                                        </ul>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
